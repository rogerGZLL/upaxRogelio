<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextPrimaryXs">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextPrimarySm">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextPrimaryMd">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextPrimaryLg">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="TextPrimaryXl">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <!--Text secondary styles-->
    <style name="TextSecondaryXs">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="TextSecondarySm">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="TextSecondaryMd">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="TextSecondaryLg">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <style name="TextSecondaryXl">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/colorSecondaryText</item>
    </style>

    <!--Text divider styles-->
    <style name="TextDividerXs">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorDivider</item>
    </style>

    <style name="TextDividerSm">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorDivider</item>
    </style>

    <style name="TextDividerMd">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/colorDivider</item>
    </style>

    <style name="TextDividerLg">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/colorDivider</item>
    </style>

    <style name="TextDividerXl">
        <item name="android:textSize">34sp</item>
        <item name="android:textColor">@color/colorDivider</item>
    </style>

    <!-- BUTTONS STYLES -->
    <style name="button_main">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_main</item>
    </style>

    <style name="button_secondary">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_secondary</item>
    </style>

    <style name="button_outline">
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@color/color_primary_dark</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/button_outline</item>
    </style>

</resources>